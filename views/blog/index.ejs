<% include ../partials/header %>

        <div class="row">

            <!-- Blog Post Content Column -->
            <div class="col-lg-8">
                <!-- Blog Post -->
              <a class="btn btn-primary" href="/blog/new">Add post</a>
              <% for(i = 0; i < posts.length; i++) { %>
              <!-- Title -->
              <h1><%= posts[i].title %></h1>
              <!-- Author -->
              <p class="lead">
                by <a href="#"><%= posts[i].author %></a>
              </p>
              <a class="btn btn-primary" href="/blog/<%= posts[i]._id %>" >View</a>
              <hr>
              <!-- Date/Time -->
              <p><span class="glyphicon glyphicon-time"></span>Posted on <%= posts[i].date %></p>
              <hr>
              <!-- Post Content -->
              <p class="message"><%= posts[i].message %></p>
              <p class="expanded-message"><%= posts[i].message %></p>
              <button class="btn btn-link view-more-link">View more</button>
              <% } %>
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
